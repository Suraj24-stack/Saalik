# backend/.env
# Saalik Backend Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=""
DB_NAME=saalik_db

# JWT Configuration
JWT_SECRET=your_super_secret4532jwt_key_change_this_in_production12345
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# File Upload Configuration
MAX_FILE_UPLOAD=5242880
FILE_UPLOAD_PATH=./public/uploads

# CORS Configuration
CLIENT_URL=http://localhost:8081
ALLOWED_ORIGINS=http://localhost:8081,http://192.168.1.10:8081,http://localhost:19006,http://192.168.1.10:19006,exp://192.168.1.10:8081,exp://192.168.1.10:19000,exp://localhost:19000

ADMIN_EMAIL=admin@saalik.tech
DEFAULT_ADMIN_PASSWORD=admin123
